{
    "name": "f4php/pechkin",
    "description": "Pechkin is a Telegram API wrapper for F4, a (really) lightweight web application framework",
    "keywords": ["f4","telegram","bot"],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "F4\\": "src/F4"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "F4\\": "tests/F4"
        }
    },
    "authors": [
        {
            "name": "Dennis Kreminsky",
            "email": "dennis@kreminsky.com"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "cweagans/composer-patches": true
        }
    },
    "scripts": {
        "test": "phpunit --bootstrap tests/F4/Config.php --display-warnings --display-phpunit-deprecations --fail-on-deprecation tests",
        "phpstan": "phpstan --level=1 analyse src tests"
    },
    "require": {
        "f4php/framework": "^0.1.53",
        "guzzlehttp/guzzle": "^7.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^13",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    }
}
